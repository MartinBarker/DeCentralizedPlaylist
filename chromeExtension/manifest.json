{
    "name": "DeCentralized Playlist Chrome",
    "version": "1.0",
    "description": "Tracks listening and sends data in JSON HTTP POST request to SQL server. ",
    "manifest_version": 2,
    "options_page": "options.html",

   "permissions": ["tabs", "storage"],

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "32": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}